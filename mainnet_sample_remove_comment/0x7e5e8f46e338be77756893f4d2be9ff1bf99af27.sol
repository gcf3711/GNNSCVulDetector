        address nftAddr,
        uint256 nftTokenId,
        uint256 sigTokenId
    ) external {
         
        IERC721 ERC721 = IERC721(nftAddr);
        require(ERC721.ownerOf(nftTokenId) == msg.sender, OWNERSHIP_ERROR);
         
        _burn(msg.sender, sigTokenId, N_BURN);
         
        require(
            !signatures[nftAddr][nftTokenId].contains(sigTokenId),
            ALREADY_SIGNED_ERROR
        );
         
        signatures[nftAddr][nftTokenId].add(sigTokenId);
         
        emit Sign(msg.sender, sigTokenId, nftAddr, nftTokenId);
    }

     

     
