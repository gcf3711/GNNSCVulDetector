    uint256 public constant N_GOLD = 9;
    uint256 public constant N_SILVER = 200;
     
    uint256 public constant N_INK = 1000;
     
    uint256 public constant N_DEV = 1;
     
    uint256 public constant N_FOUNDER = 1;

     
    uint256 private constant TOKEN_IDS_PER_SET = 6;
    bool public foundingEventActive = true;
    uint256 public birthTime;
    uint256 private constant SECONDS_IN_YEAR = 31556952;

     
    string private constant DUPLICATE_MINT_ERROR =
        "DUPLICATE MINT ERROR: Minting only allowed once per address";
    string private constant END_FOUNDERS_ERROR =
        "END FOUNDERS ERROR: The founder's event lasts 1 year";
    string private constant FOUNDERS_ALREADY_OVER =
        "FOUNDERS OVER: The founder's event is already over";
    string private constant OWNERSHIP_ERROR =
        "OWNERSHIP ERROR: Only the owner of an ERC-721 may sign it";
    string private constant ALREADY_SIGNED_ERROR =
        "ALREADY SIGNED ERROR: An ERC-721 may only be signed once by each Signature Token ID";

     
    uint256 private constant N_BURN = 1;

     
    uint256 public nextTokenId = 0;

     
    mapping(address => mapping(uint256 => EnumerableSet.UintSet))
        private signatures;

     
    mapping(address => bool) public hasMinted;

     
    address public devs;
     
    address public owner;

    constructor() public ERC1155("https://meta.tokensign.app/item/{id}.json") {
        birthTime = block.timestamp;
         
        devs = msg.sender;
        owner = msg.sender;
         
        mint("TokenSign Creators");
    }

    function contractURI() public view returns (string memory) {
        return "https://meta.tokensign.app/contract";
    }

     
    function mint(string memory name) public {
         
        require(!hasMinted[msg.sender], DUPLICATE_MINT_ERROR);
        hasMinted[msg.sender] = true;

        uint256 tmpId = nextTokenId;

         
        _mint(msg.sender, tmpId, N_PLATINUM, "");
        _mint(msg.sender, tmpId + 1, N_GOLD, "");
        _mint(msg.sender, tmpId + 2, N_SILVER, "");
        _mint(msg.sender, tmpId + 3, N_INK, "");
        _mint(devs, tmpId + 4, N_DEV, "");

         
        if (foundingEventActive) {
            _mint(msg.sender, tmpId + 5, N_FOUNDER, "");
        }

         
        emit Mint(
            msg.sender,
            tmpId.div(TOKEN_IDS_PER_SET),
            name,
            foundingEventActive
        );
        nextTokenId += TOKEN_IDS_PER_SET;
    }

     
    function endFounderEvent() external {
        require(
            birthTime + SECONDS_IN_YEAR < block.timestamp,
            END_FOUNDERS_ERROR
        );
        require(foundingEventActive, FOUNDERS_ALREADY_OVER);
        foundingEventActive = false;
    }

     
